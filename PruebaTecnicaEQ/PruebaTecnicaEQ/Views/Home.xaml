<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaTecnicaEQ.Views.Page1"
             Title="Lista de Tareas" >

    <ContentPage.Content>
        <StackLayout>
            <!-- Encabezado -->
            <Label Text="Lista de Tareas"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="Large"
                   Margin="0,10,0,10" />

            <Label Text="Agregar nueva tarea"                   
                   FontSize="Large"
                   Margin="10,10,0,10"/>
            <Button Text="Nueva tarea"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                      Margin="5,0,5,5"
                    Command="{Binding ViewRegistroCommand}" TextTransform="None"/>

            <!-- Lista de Tareas -->
                <ListView x:Name="tarea"
                      Margin="15,10,10,0"
                      ItemsSource="{Binding listaTareas}"
                      RowHeight="80">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <!-- Checkbox Personalizado -->
                                    <StackLayout Padding="5,0,5,0">
                                        <CheckBox Color="Blue"
                                              IsChecked="{Binding estado}">
                                            <CheckBox.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Path=BindingContext.ChechBoxChangedCommand_, Source={x:Reference tarea}}"
                              CommandParameter="{Binding .}" />
                                            </CheckBox.GestureRecognizers>
                                        </CheckBox>
                                    </StackLayout>

                                    <!-- Detalles de la Tarea -->
                                    <StackLayout>
                                        <Label Text="{Binding descripcionCategoria}"
                                            FontSize="Small"
                                            TextColor="Gray" />
                                        <Label Text="{Binding nombre}"
                                           FontSize="Large"
                                           FontAttributes="Bold" />
                                        <Label Text="{Binding descripcion}"  />

                                    </StackLayout>

                                    <!-- Botón Eliminar -->
                                    <StackLayout Padding="0,0,10,0" HorizontalOptions="EndAndExpand">
                                        <Button Text="Eliminar"
                                            TextColor="Red"
                                            Command="{Binding Path=BindingContext.EliminarCommand, Source={x:Reference tarea}}"
                                                  CommandParameter="{Binding .}"/>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
